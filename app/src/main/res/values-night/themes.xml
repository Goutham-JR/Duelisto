<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Duelisto" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/DarkOffPrimary</item>
        <item name="colorPrimaryVariant">@color/DarkPrimaryVariant</item>
        <item name="colorOnPrimary">@color/DarkOnPrimary</item>
        <item name="colorSecondary">@color/DarkOffSecondary</item>
        <item name="colorOnSecondary">@color/DarkOnSecondary</item>
        <item name="colorOnSurface">@color/DarkText</item>
        <item name="iconTint">@color/DarkIconTint</item>
        <item name="underlineColor">#FFFFFF</item>
        <item name="themeColor">#000000</item>
    </style>

    <style name="Theme.Duelisto" parent="Base.Theme.Duelisto" />

    <style name="RoundedImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="PopupAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_left</item>
    </style>
</resources>